<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="end"
    tools:context=".MainActivity"
    android:background="@drawable/color_background"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
            <!--    scroll -->

            <!--  begin start-->

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageView2"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/Circular"
                app:srcCompat="@drawable/portrait_3353699_960_720"
                app:strokeWidth="5dp"
                tools:ignore="ImageContrastCheck" />

            <!--    begin end-->

            <!-- Middle Start -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/textView_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/name0"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="@string/userName0"
                    android:textSize="18sp"
                    android:textColor="@color/white"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="15dp">

                    <ImageView
                        android:id="@+id/imageView_people"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/ic_people_svgrepo_com"
                        tools:ignore="ImageContrastCheck,UseAppTint"
                        android:tint="@color/white"
                        />

                    <TextView
                        android:id="@+id/Text_nFollowers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:gravity="center"
                        android:text="@string/nFollowers0"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/Text_followers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:gravity="center"
                        android:text="@string/followers0"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/Text_nFollowing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:gravity="center"
                        android:text="@string/nFollowing0"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/Text_following"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:gravity="center"
                        android:text="@string/following0"
                        android:textColor="@color/white"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/imageView_building"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/ic_building_svgrepo_com"
                        tools:ignore="ImageContrastCheck,UseAppTint"
                        android:tint="@color/white"/>

                    <TextView
                        android:id="@+id/Text_orgnames0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="@string/business0"
                        android:textColor="@color/white" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="5dp">

                    <ImageView
                        android:id="@+id/imageView_location"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/ic_location_svgrepo_com"
                        tools:ignore="ImageContrastCheck,UseAppTint"
                        android:tint="@color/white"/>

                    <TextView
                        android:id="@+id/name_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="@string/country0"
                        android:textColor="@color/white" />

                </LinearLayout>
            </LinearLayout>
            <!-- Middle END -->


            <!-- Box 1 Start-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:padding="10dp"
                android:orientation="vertical"
                android:background="@drawable/shadow">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Text_repository"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:gravity="center"
                        android:text="@string/repoName0"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/Text_status"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="290dp"
                        android:layout_marginEnd="5dp"
                        android:gravity="center"
                        android:text="@string/repoStatus0"
                        android:textColor="@color/white"
                        android:background="@drawable/shadow"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/Text_repDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="@string/repoDescription0"
                    android:textColor="@color/white"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">
                    <ImageView
                        android:id="@+id/imageView_dot"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/ic_building_svgrepo_com"
                        tools:ignore="ImageContrastCheck,UseAppTint"
                        android:tint="@color/white"/>

                    <TextView
                        android:id="@+id/Text_language"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/language0"
                        android:textColor="@color/white"/>

                    <ImageView
                        android:id="@+id/imageView_star"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="20dp"
                        app:srcCompat="@drawable/ic_star_svgrepo_com"
                        tools:ignore="ImageContrastCheck,UseAppTint"
                        android:tint="@color/white"/>

                    <TextView
                        android:id="@+id/Text_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:gravity="center"
                        android:text="@string/nLikes0"
                        android:textColor="@color/white"/>

                    <ImageView
                        android:id="@+id/imageShare"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        app:srcCompat="@drawable/ic_share_svgrepo_com"
                        tools:ignore="ImageContrastCheck,UseAppTint"
                        android:tint="@color/white"/>

                    <TextView
                        android:id="@+id/Text_sharing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:gravity="center"
                        android:text="@string/nShares0"
                        android:textColor="@color/white"/>

                </LinearLayout>
            </LinearLayout>
            <!-- Box 1 End-->

            <!-- Box 2 Start-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:orientation="vertical"
                android:background="@drawable/shadow">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Text_repository2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:gravity="center"
                        android:text="@string/repoName0"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/Text_status2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="290dp"
                        android:layout_marginEnd="5dp"
                        android:gravity="center"
                        android:text="@string/repoStatus0"
                        android:textColor="@color/white"
                        android:background="@drawable/shadow"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/Text_repDescription2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="@string/repoDescription0"
                    android:textColor="@color/white"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">
                    <ImageView
                        android:id="@+id/imageView_dot2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/ic_building_svgrepo_com"
                        tools:ignore="ImageContrastCheck,UseAppTint"
                        android:tint="@color/white"/>

                    <TextView
                        android:id="@+id/Text_language2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/language0"
                        android:textColor="@color/white"/>

                    <ImageView
                        android:id="@+id/imageView_star2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="20dp"
                        app:srcCompat="@drawable/ic_star_svgrepo_com"
                        tools:ignore="ImageContrastCheck,UseAppTint"
                        android:tint="@color/white"/>

                    <TextView
                        android:id="@+id/Text_like2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:gravity="center"
                        android:text="@string/nLikes0"
                        android:textColor="@color/white"/>

                    <ImageView
                        android:id="@+id/imageShare2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        app:srcCompat="@drawable/ic_share_svgrepo_com"
                        tools:ignore="ImageContrastCheck,UseAppTint"
                        android:tint="@color/white"/>

                    <TextView
                        android:id="@+id/Text_sharing2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:gravity="center"
                        android:text="@string/nShares0"
                        android:textColor="@color/white"/>

                </LinearLayout>
            </LinearLayout>
            <!-- Box 2 END-->

            <!-- Box 3 Start-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:orientation="vertical"
                android:background="@drawable/shadow">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Text_repository3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:gravity="center"
                        android:text="@string/repoName0"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/Text_status3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="290dp"
                        android:layout_marginEnd="5dp"
                        android:gravity="center"
                        android:text="@string/repoStatus0"
                        android:textColor="@color/white"
                        android:background="@drawable/shadow"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/Text_repDescription3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="@string/repoDescription0"
                    android:textColor="@color/white"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">
                    <ImageView
                        android:id="@+id/imageView_dot3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/ic_building_svgrepo_com"
                        tools:ignore="ImageContrastCheck,UseAppTint"
                        android:tint="@color/white"/>

                    <TextView
                        android:id="@+id/Text_language3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/language0"
                        android:textColor="@color/white"/>

                    <ImageView
                        android:id="@+id/imageView_star3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="20dp"
                        app:srcCompat="@drawable/ic_star_svgrepo_com"
                        tools:ignore="ImageContrastCheck,UseAppTint"
                        android:tint="@color/white"/>

                    <TextView
                        android:id="@+id/Text_like3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:gravity="center"
                        android:text="@string/nLikes0"
                        android:textColor="@color/white"/>

                    <ImageView
                        android:id="@+id/imageShare3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        app:srcCompat="@drawable/ic_share_svgrepo_com"
                        tools:ignore="ImageContrastCheck,UseAppTint"
                        android:tint="@color/white"/>

                    <TextView
                        android:id="@+id/Text_sharing3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:gravity="center"
                        android:text="@string/nShares0"
                        android:textColor="@color/white"/>

                </LinearLayout>
            </LinearLayout>
            <!-- Box 3 END-->


        </LinearLayout>
    </ScrollView>
</LinearLayout>